<?xml version="1.0" encoding="UTF-8"?>
<corvus>

	<!-- Home Directory -->
	<home>/corvus/</home>

	<!-- Plugin Registry -->
	<plugin>
		<registry>/corvus/plugins</registry>
		<descriptor>plugin.xml</descriptor>
	</plugin>

	<!-- Encoding settings -->
	<encoding>
		<servlet-request>UTF-8</servlet-request>
		<servlet-response>text/html;UTF-8</servlet-response>
	</encoding>
	
	<!-- Environment settings -->
	<environment>
		<properties>
			<http.proxyHost></http.proxyHost>
			<http.proxyPort></http.proxyPort>
			<https.proxyHost></https.proxyHost>
			<https.proxyPort></https.proxyPort>
			<sun.net.client.defaultConnectTimeout>30000</sun.net.client.defaultConnectTimeout>
			<sun.net.client.defaultReadTimeout>300000</sun.net.client.defaultReadTimeout>
			<!-- javax.net.ssl.trustStore>/j2sdk1.4.2_04/jre/lib/security/cacerts</javax.net.ssl.trustStore -->
			<!-- javax.net.ssl.trustStorePassword>password</javax.net.ssl.trustStorePassword -->
			<file.encoding>UTF-8</file.encoding>
		</properties>
	</environment>
	
</corvus>